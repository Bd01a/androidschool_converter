<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/value1_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/value2_textview"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/default_margin"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:id="@+id/edit_text_value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/edit_text_value2"
            app:layout_constraintTop_toBottomOf="@id/value1_textview"
            android:layout_margin="@dimen/default_margin"
            android:layout_gravity="center_horizontal"
            />
        <Spinner
            android:id="@+id/firsr_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/value2_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value2"
            app:layout_constraintLeft_toLeftOf="@id/value1_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/default_margin"
            />

        <EditText
            android:id="@+id/edit_text_value2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/edit_text_value1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/value2_textview"
            android:layout_margin="@dimen/default_margin"
            android:layout_gravity="center_horizontal"
            />
        <Spinner
            android:id="@+id/second_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>


</LinearLayout>